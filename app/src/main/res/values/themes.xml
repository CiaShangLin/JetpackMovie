<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JetpackMovie" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/gray_fcfcfc</item>

        <!-- 底層Layout顏色，通常上面的子Layout不設置background的話會是透明的 -->
        <item name="BottomLayerColor">@color/white</item>

        <!-- MovieItem的背景顏色 @drawable/style_epoxy_movie_model-->
        <item name="EpoxyMovieModelBackground">@color/white</item>

        <!-- 電影未收藏圖案       -->
        <item name="MovieNoFavoritesResource">@drawable/icon_not_favor_light</item>

        <item name="ChangeThemeDialogBackground">@color/white</item>
    </style>

    <style name="MainBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@drawable/main_bottom_navigation_light_state</item>
        <item name="itemIconTint">@drawable/main_bottom_navigation_light_state</item>
        <item name="android:background">?android:attr/windowBackground</item>
    </style>

    <style name="MovieTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">@color/yellow_ffd306</item>
        <item name="tabIndicator">@drawable/home_tab_layout_indicator</item>
        <item name="tabSelectedTextColor">@color/yellow_ffd306</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabBackground">@color/white</item>
    </style>

    <style name="MovieTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieDay" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EpoxyMovieModelCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/epoxy_movie_model_corner</item>
        <item name="cornerSizeTopRight">@dimen/epoxy_movie_model_corner</item>
    </style>

    <style name="ErrorPullDown" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingItemTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DevelopersTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="DetailTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailContentTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="ActorNameTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActorCharacterTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_3c3c3c</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>